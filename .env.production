# 生产环境配置
NODE_ENV=production

# 数据库配置（生产环境）
MYSQL_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!@#
MYSQL_DATABASE=jiujiu_prod
MYSQL_USER=jiujiu_user
MYSQL_PASSWORD=CHANGE_THIS_DB_PASSWORD_456!@#
DB_HOST=mysql
DB_PORT=3306

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT配置（生产环境必须修改）
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_64_CHARS_MIN
JWT_EXPIRES_IN=7d

# API配置
API_PORT=3001
API_BASE_URL=https://api.your-domain.com

# 前端配置
FRONTEND_PORT=3000
FRONTEND_URL=https://your-domain.com

# 管理后台配置
ADMIN_PORT=80
ADMIN_URL=https://admin.your-domain.com

# 邮件服务配置（生产环境必填）
EMAIL_HOST=smtp.qq.com
EMAIL_PORT=465
EMAIL_USER=your-email@qq.com
EMAIL_PASS=your-email-password

# 支付配置（生产环境）
ALIPAY_APP_ID=your_production_app_id
ALIPAY_PRIVATE_KEY=your_production_private_key
ALIPAY_PUBLIC_KEY=your_production_public_key
ALIPAY_SANDBOX=false
ALIPAY_NOTIFY_URL=https://api.your-domain.com/api/payment/alipay/notify
ALIPAY_RETURN_URL=https://your-domain.com/payment/success

WECHAT_APP_ID=your_production_app_id
WECHAT_MCH_ID=your_production_mch_id
WECHAT_API_KEY=your_production_api_key
WECHAT_SANDBOX=false
WECHAT_NOTIFY_URL=https://api.your-domain.com/api/wechat/notify

# 生产环境特性
DEBUG=false
LOG_LEVEL=error
LOG_FILE=/app/logs/production.log

# 安全配置
CORS_ORIGIN=https://your-domain.com,https://admin.your-domain.com
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET
COOKIE_SECURE=true

# 性能配置
CLUSTER_WORKERS=auto
COMPRESSION=true
CACHE_TTL=3600

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# 监控配置
MONITORING_ENABLED=true
SENTRY_DSN=your_sentry_dsn_if_using